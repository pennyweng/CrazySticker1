<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	xmlns:ads="http://schemas.android.com/apk/res-auto"     
    android:background="#FFFFFF"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_above="@+id/rl2"
    android:layout_alignParentTop="true">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_above="@+id/rl2"
    android:layout_alignParentTop="true">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:text="目前點數:0點"
        android:gravity="center"
        android:textColor="#919191"
        />
    <Button
        android:id="@+id/Button00"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignRight="@+id/Button02"
        android:layout_below="@+id/textView1"
        android:background="#E0E0E0"
        android:padding="15dp"
        android:text="傑思愛德威任務s"
        android:layout_marginBottom="2dp"
        android:textColor="#FF6D12"
        android:visibility="invisible"
        android:textSize="22sp" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignRight="@+id/Button02"
        android:layout_below="@+id/textView1"
        android:background="#E0E0E0"
        android:padding="15dp"
        android:text="有米任務s"
        android:layout_marginBottom="2dp"
        android:textColor="#FF6D12"
        android:textSize="22sp" />

    <Button
        android:id="@+id/Button02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignRight="@+id/button1"
        android:layout_below="@+id/Button01"
        android:background="#E0E0E0"
        android:padding="15dp"
        android:text="趣米任務s"
        android:textColor="#FF6D12"
        android:layout_marginBottom="2dp"
        android:textSize="22sp" />

   <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Button02"
        android:background="#E0E0E0"
        android:padding="15dp"
        android:text="多盟任務s"
        android:textColor="#FF6D12"
        android:textSize="22sp" />

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:text="快點來取得今日驚喜"
        android:textColor="#919191"
        android:layout_marginTop="15dp"
        android:id="@+id/textView8" />

    <Button
        android:id="@+id/Button03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignRight="@+id/button1"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="2dp"
        android:background="#E0E0E0"
        android:layout_marginBottom="2dp"
        android:text="每日驚喜點數s"
        android:textColor="#FF6D12"
        android:textSize="22sp" />

    <Button
        android:id="@+id/Button04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignRight="@+id/button1"
        android:layout_below="@+id/Button03"
        android:background="#E0E0E0"
        android:padding="15dp"
        android:text="分享至Facebook\n立刻得到66點"
        android:textColor="#FF6D12"
        android:textSize="22sp" />


</LinearLayout>
</ScrollView>
    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-4380704232895794/6822774865" >
        </com.google.android.gms.ads.AdView>

    </RelativeLayout>

</RelativeLayout>